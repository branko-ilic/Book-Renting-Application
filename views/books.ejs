<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>UVIT Septembar2 2019/2020</title>

  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="/css/books.css" />
</head>

<body>
  <div class="container">
    <div>
      <div>
        <h1>Welcome <%= index %>
        </h1>
        <nav>
          <a href="/">Home page</a>
        </nav>
        <hr />
        <h4>Your previous rented books</h4>

        <% for(const currBook of rentedBooks) { %>
          <div class="alert alert-warning">
            <h6>
              <%= currBook.book['name'] %>
            </h6>
            <p>Renting from <%= currBook.rentingDate.getDate() %>.<%= currBook.rentingDate.getMonth()+1 %>.<%=
                    currBook.rentingDate.getFullYear() %> to <%= currBook.returningDate.getDate() %>.<%=
                        currBook.returningDate.getMonth()+1 %>.<%= currBook.returningDate.getFullYear() %>
            </p>
          </div>
          <% } %>

            <hr />
            <h4>Rent a book here</h4>


            <% for(let i=0; i < allBooks.length; i++) { %>
              <form action="/rent/rent" method="POST" style="display: inline-block;">
                <div class="alert alert-primary">
                  <input type="hidden" name="id" value="<%= allBooks[i]._id %>">
                  <input type="hidden" name="indeks" value="<%= index %>">
                  <input type="hidden" name="rentedBooks" value="<%= rentedBooks %>">
                  <input type="hidden" name="allBooks" value="<%= allBooks %>">
                  <input type="hidden" name="allAuthors" value="<%= allAuthors %>">
                  <h6>
                    <%= allBooks[i].name %>
                  </h6>
                  <ul>
                    <% for(let j=0; j < allAuthors.length; j++) { %>
                      <% if(j===i) { %>
                        <% for(let k=0; k < allAuthors[j].length; k++) { %>
                          <li>
                            <%= allAuthors[j][k] %>
                          </li>
                          <% } %>
                            <% } %>
                              <% } %>
                  </ul><br><br>
                  <label>Choose date of return:</label>
                  <input type="date" name="datumVracanja" id="datumVracanja"><br><br>
                  <button type="submit">Rent this book</button>
                </div>
              </form>

              <% } %>


      </div>
    </div>
  </div>
</body>

</html>